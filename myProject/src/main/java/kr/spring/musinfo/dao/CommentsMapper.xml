<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="kr.spring.musinfo.dao.CommentsMapper">  

	<update id="updateComments" parameterType="CommentsVO">
		update reviews set
			nickname=#{nickname},rev_rate=#{rev_rate},review=#{review},rev_regdate=sysdate 
		where rev_num={rev_num}			
	</update>
</mapper>
